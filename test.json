{
  "modules": {
    "base": {
      "topLevelName": "Phoenix",

      "mixins": [
        "costanza",
        "costanza-zepto"
      ],
      "scripts": [
        {"src": "underscore.js", "bower": "underscore", "global": true}
      ]
    },

    "loader": {
      "topLevelName": "Loader",
      "mixins": [
        "lumbar-loader"
      ],
      "scripts": [
        "test/load.js"
      ]
    },
    "test": {
      "topLevelName": "Test",
      "mixins": [
        {"name": "test", "library": "phoenix-build"},
        "test-runner"
      ],
      "static": [
        {"src": "test/invalid.js", "dest": "invalid.js", "update-externals": true, "root": true}
      ]
    }
  },

  "mixins": [
    "."
  ],
  "test": {
    "auto-include": "test/"
  }
}
